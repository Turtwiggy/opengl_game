{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      // "command": "make ${input:parallel}",
      "command": [
        "thirdparty/gameengine/thirdparty/emsdk/emsdk activate latest | Out-Null;",
        "cmake -Bbuild -DCMAKE_TOOLCHAIN_FILE:FILEPATH=thirdparty/gameengine/thirdparty/emsdk/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake -Hc:/Programming/c++_game;",
        "cmake --build build --config Debug --target game_2d -j 14 "
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    }
  ],
  "inputs": [
    {
      "id": "parallel",
      "description": "none",
      "default": "-j 14",
      "type": "promptString"
    }
  ]
}
